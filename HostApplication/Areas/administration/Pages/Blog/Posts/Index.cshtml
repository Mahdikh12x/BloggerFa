@page
@model HostApplication.Areas.administration.Pages.Blog.Posts.IndexModel
@{
    TempData["Title"] = "Post Management";
}
<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Search</h4>
                </div>
                <div class="card-body">
                    <div class="card-block pb-0">
                        <form method="get">
                            <div class="row">
                                <div class="col-4 position-relative has-icon-left">
                                    <input name="searchModel.Name" type="text" class="form-control" placeholder="Name of Post Category">
                                    <div class="form-control-position">
                                        <i class="ft-search info"></i>
                                    </div>
                                </div>
                                <button class="col-1 btn mr-1 shadow-z-2 btn-info">Search...</button>
                                <a asp-page="./Index" class="col-1 btn mr-1 shadow-z-1-hover btn-primary">Take All...</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block">
                        <a asp-page="./Create" id="addRow" class="btn btn-primary pull-right  btn mr-1 shadow-z-2 btn-success mb-2"><i class="ft-plus"></i>&nbsp; Create </a>
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <div id="DataTables_Table_7_filter" class="dataTables_filter">
                                    <label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_7"></label>
                                </div>
                            </div>
                        </div>
                        <table class="table table-responsive-md text-center">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Title</th>
                                    <th>AuthorName</th>
                                    <th>PublishDate</th>
                                    <th>Category</th>
                                    <th>Modified Date</th>
                                    <th><i class="fa font-medium-5  fa-eye success"></i></th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Posts != null)
                                {
                                    @foreach (var item in Model.Posts)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            @*<td>
                                    <img src="@item.Picture" class="width-50 rounded-circle" alt="CategoryPicture">
                                    </td>*@
                                            <td>@item.Title</td>
                                            <td>@item.AuthorName</td>
                                            <td>@item.PublishDate</td>
                                            <td>@item.CategoryName</td>
                                            <td>@item.DateModified</td>
                                            <td>@item.NumberOfViews</td>
                                            @if (item.IsActive)
                                            {
                                                <td class="text-truncate"><i class="fa ft-activity success font-medium-4 mr-1"></i></td>
                                            }
                                            else
                                            {
                                                <td class="text-truncate"><i class="fa fa-dot-circle-o danger font-medium-4 mr-1"></i></td>
                                            }
                                            <td>

                                                <a asp-area="administration" asp-page="./Edit" asp-route-id="@item.Id" class="success p-0" data-original-title="" title="">
                                                    <i class="fa fa-pencil font-medium-5 mr-2"></i>
                                                </a>
                                                @if (item.IsActive)
                                                {
                                                    <a  asp-area="administration" asp-page-handler="DeActive" asp-route-id="@item.Id" class="danger p-0" data-original-title="" title="">
                                                        <i class=" ft-x font-medium-5 mr-2"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a  asp-page-handler="Active" asp-route-id="@item.Id" class="info p-0" data-original-title="" title="">
                                                        <i class="fa fa-check font-medium-5 mr-2"></i>
                                                    </a>
                                                }
                                                
                                               
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>