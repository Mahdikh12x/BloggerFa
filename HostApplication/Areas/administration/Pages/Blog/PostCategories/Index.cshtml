@page
@using BlogManagement.Application.Contracts.PostCategory
@model HostApplication.Areas.administration.Pages.Blog.PostCategories.IndexModel
@{
    TempData["Title"] = "PostCategory Management";
}

<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Search</h4>
                </div>
                <div class="card-body">
                    <div class="card-block pb-0">
                        <form method="get">
                            <div class="row">
                                <div class="col-4 position-relative has-icon-left">
                                    <input name="searchModel.Name" type="text" class="form-control" placeholder="Name of Post Category">
                                    <div class="form-control-position">
                                        <i class="ft-search info"></i>
                                    </div>
                                </div>
                                <button class="col-1 btn mr-1 shadow-z-2 btn-info">Search...</button>
                                <a asp-page="./Index" class="col-1 btn mr-1 shadow-z-1-hover btn-primary">Take All...</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block">
                        <a href="#showmodal=@Url.Page("./Index", "Create")" id="addRow" class="btn btn-primary pull-right  btn mr-1 shadow-z-2 btn-success mb-2"><i class="ft-plus"></i>&nbsp; Create </a>
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <div id="DataTables_Table_7_filter" class="dataTables_filter">
                                    <label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_7"></label>
                                </div>
                            </div>
                        </div>
                        <partial name="_List" model="@Model.PostCategories"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
